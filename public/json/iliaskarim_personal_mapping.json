{
  "title": "Right Shift to cut, right Command to copy & right Option to paste",
  "rules": [
    {
      "description": "Right Shift to Cut",
      "manipulators": [
        {
          "from": {
            "key_code": "right_shift"
          },
          "to": [
            {
              "key_code": "x",
              "modifiers": ["command"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Right Command to Copy",
      "manipulators": [
        {
          "from": {
            "key_code": "right_command"
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": ["command"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Right option to Paste",
      "manipulators": [
        {
          "from": {
            "key_code": "right_option"
          },
          "to": [
            {
              "key_code": "v",
              "modifiers": ["command"]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
